<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewSend">
        <item name="android:gravity">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewReceive">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LinearLayoutSend">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LinearLayoutReceive">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>